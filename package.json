{
  "name": "@vinicunca/perkakas",
  "type": "module",
  "version": "0.5.2",
  "packageManager": "pnpm@8.10.5",
  "description": "Utility for JavaScript and Typescript.",
  "author": "praburangki<https://github.com/praburangki>",
  "license": "MIT",
  "homepage": "https://github.com/vinicunca/perkakas#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vinicunca/perkakas.git"
  },
  "bugs": {
    "url": "https://github.com/vinicunca/perkakas/issues"
  },
  "keywords": [
    "javascript utility",
    "typescript utility",
    "javascript utilities",
    "typescript utilities",
    "javascript helpers",
    "typescript helpers"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./*": "./*"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublish": "pnpm run build",
    "release": "bumpp package.json",
    "typedoc": "typedoc --json dist/metadata.json",
    "build": "rollup -c && pnpm run typedoc",
    "dev": "pnpm build --watch",
    "lint": "eslint . --fix",
    "publish:ci": "pnpm publish --access public --no-git-checks"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@vinicunca/eslint-config": "^2.2.0",
    "@vitest/coverage-v8": "^1.4.0",
    "bumpp": "^9.4.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "rollup": "^4.13.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "tiny-invariant": "^1.3.3",
    "tsup": "^8.0.2",
    "type-fest": "^4.14.0",
    "typedoc": "^0.25.12",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "pnpm": {
    "overrides": {
      "eslint": "^8.57.0"
    }
  }
}
